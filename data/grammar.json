[
  {
    "id": "ga-particle",
    "title": "が (ga) - Subject Marker",
    "titleRomaji": "ga",
    "explanation": "标记句子的语法主语。通常用于引入新信息或强调执行动作的事物。",
    "examples": [
      {
        "japanese": "猫が好きです。",
        "romaji": "Neko ga suki desu.",
        "english": "我喜欢猫。（字面意思：猫被喜欢）"
      },
      {
        "japanese": "雨が降っています。",
        "romaji": "Ame ga futteimasu.",
        "english": "正在下雨。（字面意思：雨在降落）"
      },
      {
        "japanese": "誰が来ましたか？",
        "romaji": "Dare ga kimashita ka?",
        "english": "谁来了？"
      }
    ]
  },
  {
    "id": "wa-particle",
    "title": "は (wa) - Topic Marker",
    "titleRomaji": "wa",
    "explanation": "标记句子的主题（你正在谈论的内容）。注意：写作は但用作助词时发音为'wa'。",
    "examples": [
      {
        "japanese": "私は学生です。",
        "romaji": "Watashi wa gakusei desu.",
        "english": "我是学生。"
      },
      {
        "japanese": "これは本です。",
        "romaji": "Kore wa hon desu.",
        "english": "这是一本书。"
      },
      {
        "japanese": "今日は暑いです。",
        "romaji": "Kyou wa atsui desu.",
        "english": "今天很热。"
      }
    ]
  },
  {
    "id": "wo-particle",
    "title": "を (wo) - Object Marker",
    "titleRomaji": "wo/o",
    "explanation": "标记动作的直接宾语。在现代日语中通常发音为'o'而不是'wo'。",
    "examples": [
      {
        "japanese": "りんごを食べます。",
        "romaji": "Ringo wo tabemasu.",
        "english": "我吃苹果。"
      },
      {
        "japanese": "本を読みます。",
        "romaji": "Hon wo yomimasu.",
        "english": "我读书。"
      },
      {
        "japanese": "音楽を聞きます。",
        "romaji": "Ongaku wo kikimasu.",
        "english": "我听音乐。"
      }
    ]
  },
  {
    "id": "ni-particle",
    "title": "に (ni) - Location/Time/Direction Marker",
    "titleRomaji": "ni",
    "explanation": "表示存在的位置、时间、方向或动作的目标。用途非常广泛的助词。",
    "examples": [
      {
        "japanese": "東京に住んでいます。",
        "romaji": "Toukyou ni sundeimasu.",
        "english": "我住在东京。"
      },
      {
        "japanese": "９時に起きます。",
        "romaji": "Kuji ni okimasu.",
        "english": "我9点起床。"
      },
      {
        "japanese": "友達に会います。",
        "romaji": "Tomodachi ni aimasu.",
        "english": "我见朋友。"
      }
    ]
  },
  {
    "id": "de-particle",
    "title": "で (de) - Location/Means Marker",
    "titleRomaji": "de",
    "explanation": "表示动作发生的地点或完成某事的方式/方法。",
    "examples": [
      {
        "japanese": "図書館で勉強します。",
        "romaji": "Toshokan de benkyou shimasu.",
        "english": "我在图书馆学习。"
      },
      {
        "japanese": "バスで行きます。",
        "romaji": "Basu de ikimasu.",
        "english": "我坐公交车去。"
      },
      {
        "japanese": "日本語で話します。",
        "romaji": "Nihongo de hanashimasu.",
        "english": "我用日语说话。"
      }
    ]
  },
  {
    "id": "desu-copula",
    "title": "です (desu) - Copula",
    "titleRomaji": "desu",
    "explanation": "系动词，意思是'是'（用于非动作）。使句子礼貌并表示存在状态或等同关系。",
    "examples": [
      {
        "japanese": "これは机です。",
        "romaji": "Kore wa tsukue desu.",
        "english": "这是一张桌子。"
      },
      {
        "japanese": "彼は先生です。",
        "romaji": "Kare wa sensei desu.",
        "english": "他是老师。"
      },
      {
        "japanese": "きれいです。",
        "romaji": "Kirei desu.",
        "english": "很漂亮。"
      }
    ]
  },
  {
    "id": "masu-form",
    "title": "ます (masu) - Polite Verb Ending",
    "titleRomaji": "masu",
    "explanation": "礼貌的现在时/将来时动词词尾。附加到动词词干使其正式和礼貌。",
    "examples": [
      {
        "japanese": "行きます。",
        "romaji": "Ikimasu.",
        "english": "我去。/ 我将去。"
      },
      {
        "japanese": "食べます。",
        "romaji": "Tabemasu.",
        "english": "我吃。/ 我将吃。"
      },
      {
        "japanese": "見ます。",
        "romaji": "Mimasu.",
        "english": "我看。/ 我将看。"
      }
    ]
  },
  {
    "id": "te-form",
    "title": "て形 (te-form) - Connector Form",
    "titleRomaji": "te-kei",
    "explanation": "用于连接动作、提出请求或表示正在进行的动作的动词形式。非常常见且用途广泛的语法结构。",
    "examples": [
      {
        "japanese": "起きて、顔を洗います。",
        "romaji": "Okite, kao wo araimasu.",
        "english": "我起床然后洗脸。"
      },
      {
        "japanese": "座ってください。",
        "romaji": "Suwatte kudasai.",
        "english": "请坐。"
      },
      {
        "japanese": "走っています。",
        "romaji": "Hashitteimasu.",
        "english": "我正在跑步。"
      }
    ]
  }
]
